{
	"name": "vigilans-nexum",
	"version": "1.0.0",
	"description": "A tactical RPG inspired by the fire emblem franchise",
	"author": "Dardan Rrafshi",
	"license": "Apache-2.0",
	"type": "module",
	"keywords": [
		"tactical",
		"turn-based",
		"tile-based",
		"rpg",
		"tactical-rpg",
		"story",
		"game",
		"game-development"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DonColon/vigilans-nexum.git"
	},
	"bugs": {
		"url": "https://github.com/DonColon/vigilans-nexum/issues"
	},
	"homepage": "https://github.com/DonColon/vigilans-nexum#readme",
	"scripts": {
		"clean": "rimraf dist coverage",
		"format": "prettier --config .prettierrc {src,test}/**/*.{ts,html,css,json} --write",
		"format:check": "prettier --config .prettierrc {src,test}/**/*.{ts,html,css,json} --check",
		"lint": "eslint src test",
		"lint:fix": "eslint src test --fix",
		"build": "tsc && vite build",
		"build:preview": "vite preview",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"start": "vite"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"@vitest/coverage-istanbul": "^1.1.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.2",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vite-tsconfig-paths": "^4.2.2",
		"vitest": "^1.1.0"
	}
}
