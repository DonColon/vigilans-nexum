{
	"name": "vigilans-nexum",
	"version": "0.0.1",
	"description": "A tactical RPG inspired by the fire emblem franchise",
	"author": "Dardan Rrafshi",
	"license": "Apache-2.0",
	"type": "module",
	"keywords": [
		"tactical",
		"turn-based",
		"tile-based",
		"rpg",
		"tactical-rpg",
		"story",
		"game",
		"game-development"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DonColon/vigilans-nexum.git"
	},
	"bugs": {
		"url": "https://github.com/DonColon/vigilans-nexum/issues"
	},
	"homepage": "https://github.com/DonColon/vigilans-nexum#readme",
	"scripts": {
		"clean": "rimraf dist coverage",
		"format": "prettier --config .prettierrc {src,test}/**/*.{ts,html,css,json} --write",
		"format:check": "prettier --config .prettierrc {src,test}/**/*.{ts,html,css,json} --check",
		"lint": "eslint src test",
		"lint:fix": "eslint src test --fix",
		"build": "tsc && vite build",
		"build:preview": "vite preview",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"start": "vite"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"@vitest/coverage-istanbul": "3.0.6",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-prettier": "5.2.3",
		"prettier": "3.5.1",
		"rimraf": "6.0.1",
		"tslib": "2.8.1",
		"typescript": "5.7.3",
		"vite": "6.1.1",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.6"
	}
}
